<Application
    x:Class="KurosukeInfoBoard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Windows.UI.Xaml.Media"
    xmlns:local="using:KurosukeInfoBoard">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary>
                    <media:AcrylicBrush x:Key="SkyBlueAcrylicBrush"
                                BackgroundSource="Backdrop"
                                TintOpacity="0.7" 
                                TintColor="{StaticResource SystemAccentColor}" 
                                FallbackColor="{StaticResource SystemAccentColorDark1}" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
